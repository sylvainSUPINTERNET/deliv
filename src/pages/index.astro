---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/dashboard/Button';
import { Image } from 'astro:assets';
import { DeleteButton } from '../components/dashboard/DeleteButton';



const mockStoreProducts = [1,2,3,4];

---

<!-- pas mal : https://play.tailwindcss.com/ -->

<Layout title="Home">

	<div class="mx-auto container">

		<h1 class="my-6 text-4xl text-white tracking-tight font-extrabold">Overview</h1>
	
		<!-- TODO : no store display this -->
		<div class="flex flex-col justify-center p-6 text-center rounded shadow border border-gray-800 mt-2">
			<div>
				<p class="text-gray-300 tracking-tight text-2xl font-extrabold">Vous n'avez pas de Store pour le moment</p>
			</div>
			<div>
				<div class="my-6">
					<Button text="Nouveau Store" client:load className="text-2xl tracking-tight font-extrabold uppercase"></Button>
				</div>
			</div>
		</div>
		
		<!-- TODO view when i have already some store created -->
		<div class="flex flex-col p-6  rounded shadow border border-gray-800 mt-2">
			<div>
				<p class="text-white tracking-tight text-4xl font-extrabold">My Store</p>
			</div>
			<div class="mt-8 mb-2 md:mt-5 text-2xl flex justify-center md:justify-end">
				<Button text="+ produit" className='uppercase font-bold' client:load></Button>
			</div>
			<div>
				<div class="space-x-2 flex flex-col lg:flex-row mt-6">
						{
							mockStoreProducts.map( (el, i) => {
								return (
									<div>
										<div class="max-w-sm rounded-xl overflow-hidden shadow-lg  bg-card-product bg-cover bg-left backdrop-blur-md border border-gray-800">
											<Image
											class="w-full"
											src="https://img.freepik.com/free-psd/fully-editable-mockup-with-glass-bottles-different-flavours_1361-2501.jpg?size=626&ext=jpg&ga=GA1.1.1319243779.1711584000&semt=ais"
											alt="descriptive text"
											width="200"
											height="150" />
											<div class="flex justify-around my-4 p-1">
												<div>
													<DeleteButton text="Supprimer" className='uppercase font-bold' client:load></DeleteButton>
												</div>
												<div class="text-2xl text-white tracking-tight  font-extrabold px-6 space-x-2">19.99$</div>
											</div>
											<div class="px-6">
											<div class="my-5 text-white tracking-tight text-xl font-extrabold">The Coldest Sunset</div>
											<p class="text-white text-base  tracking-tight">
												Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatibus quia, nulla! Maiores et perferendis eaque, exercitationem praesentium nihil.
											</p>
											</div>

											<div class="flex justify-center mt-3 p-2 my-6">
												<Button text="Ajouter" className='uppercase font-bold w-3/4' client:load></Button>
											</div>  
										</div>
									</div>

								)

							})
						}
				
				</div>
				
			</div>
		</div>
	
	</div>

</Layout>



